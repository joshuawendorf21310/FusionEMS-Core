{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://fusionems.quantum/schemas/founder_action_plan.schema.json",
  "title": "Founder Copilot Action Plan",
  "type": "object",
  "additionalProperties": false,
  "required": ["intent", "summary", "actions", "acceptance_tests"],
  "properties": {
    "intent": {
      "type": "string",
      "enum": ["INFO_ONLY", "PLAN_ONLY", "CODE_CHANGE", "DEPLOY_CHANGE", "AUDIT"]
    },
    "summary": { "type": "string", "minLength": 10, "maxLength": 400 },
    "risk_level": { "type": "string", "enum": ["low", "medium", "high"] },
    "actions": { "type": "array", "minItems": 1, "items": { "$ref": "#/$defs/action" } },
    "acceptance_tests": { "type": "array", "minItems": 1, "items": { "type": "string", "minLength": 3 } },
    "notes": { "type": "string", "maxLength": 2000 }
  },
  "$defs": {
    "action": {
      "type": "object",
      "additionalProperties": false,
      "required": ["type", "payload"],
      "properties": {
        "type": {
          "type": "string",
          "enum": [
            "CREATE_FILE", "UPDATE_FILE", "DELETE_FILE", "APPLY_PATCH",
            "GENERATE_MIGRATION", "RUN_COMMAND", "RUN_RELEASE_GATE",
            "UPDATE_CLOUDFORMATION", "GENERATE_REPORT", "OPEN_PR"
          ]
        },
        "payload": {
          "oneOf": [
            { "$ref": "#/$defs/createFilePayload" },
            { "$ref": "#/$defs/updateFilePayload" },
            { "$ref": "#/$defs/deleteFilePayload" },
            { "$ref": "#/$defs/applyPatchPayload" },
            { "$ref": "#/$defs/generateMigrationPayload" },
            { "$ref": "#/$defs/runCommandPayload" },
            { "$ref": "#/$defs/runReleaseGatePayload" },
            { "$ref": "#/$defs/updateCloudformationPayload" },
            { "$ref": "#/$defs/generateReportPayload" },
            { "$ref": "#/$defs/openPrPayload" }
          ]
        }
      }
    },
    "createFilePayload": {
      "type": "object",
      "additionalProperties": false,
      "required": ["path", "content"],
      "properties": {
        "path": { "type": "string", "minLength": 3 },
        "content": { "type": "string", "minLength": 1 }
      }
    },
    "updateFilePayload": {
      "type": "object",
      "additionalProperties": false,
      "required": ["path", "content"],
      "properties": {
        "path": { "type": "string", "minLength": 3 },
        "content": { "type": "string", "minLength": 1 }
      }
    },
    "deleteFilePayload": {
      "type": "object",
      "additionalProperties": false,
      "required": ["path"],
      "properties": { "path": { "type": "string", "minLength": 3 } }
    },
    "applyPatchPayload": {
      "type": "object",
      "additionalProperties": false,
      "required": ["patch"],
      "properties": { "patch": { "type": "string", "minLength": 10 } }
    },
    "generateMigrationPayload": {
      "type": "object",
      "additionalProperties": false,
      "required": ["message"],
      "properties": {
        "message": { "type": "string", "minLength": 5, "maxLength": 120 },
        "tables": { "type": "array", "items": { "type": "string" } }
      }
    },
    "runCommandPayload": {
      "type": "object",
      "additionalProperties": false,
      "required": ["cmd"],
      "properties": {
        "cmd": { "type": "string", "minLength": 3, "maxLength": 200 },
        "working_dir": { "type": "string", "maxLength": 200 }
      }
    },
    "runReleaseGatePayload": {
      "type": "object",
      "additionalProperties": false,
      "required": ["workflow"],
      "properties": {
        "workflow": { "type": "string", "enum": ["release-gate"] },
        "ref": { "type": "string", "maxLength": 200 }
      }
    },
    "updateCloudformationPayload": {
      "type": "object",
      "additionalProperties": false,
      "required": ["patch"],
      "properties": { "patch": { "type": "string", "minLength": 10 } }
    },
    "generateReportPayload": {
      "type": "object",
      "additionalProperties": false,
      "required": ["report_type"],
      "properties": {
        "report_type": {
          "type": "string",
          "enum": ["coverage_matrix", "e2e_smoke", "cfn_readiness", "audit_full"]
        },
        "scope": { "type": "string", "maxLength": 200 }
      }
    },
    "openPrPayload": {
      "type": "object",
      "additionalProperties": false,
      "required": ["title"],
      "properties": {
        "title": { "type": "string", "minLength": 5, "maxLength": 120 },
        "body": { "type": "string", "maxLength": 4000 },
        "base": { "type": "string", "default": "main" },
        "head": { "type": "string", "maxLength": 200 }
      }
    }
  }
}
